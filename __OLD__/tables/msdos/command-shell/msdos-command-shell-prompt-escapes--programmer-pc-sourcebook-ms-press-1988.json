	},
	"table": {
		"$b": { "value": [ "Vertical slash ( | )", "$p$b", "C:\\MYDIR}" ] },
		"$d": { "value": [ "Current system date", "$d $n$g", "Mon 9-5-1986 C>" ] },
		"$e": { "value": [ "Escape character (for use with ANSI.SYS)", "$e[32m$n$g$e[0m", "C> (prompt is green)" ] },
		"$g": { "value": [ "Greater than sign ( > )", "$p$g", "C:\\MYDIR>" ] },
		"$h": { "value": [ "Destructive backspace", "$t$h$h$h $p$g", "09:30:26 C:\\MYDIR>" ] },
		"$l": { "value": [ "Less than sign ( < )", "$l$n$g", "<C>" ] },
		"$n": { "value": [ "Current drive letter", "Drive is $n$g", "Drive is C>" ] },
		"$p": { "value": [ "Current pathname directory", "Path is $p$g", "Path is C:\\MYDIR>" ] },
		"$q": { "value": [ "Equals sign ( = )", "Drive $q $n$g", "Drive = C>" ] },
		"$t": { "value": [ "Current system time", "Time is $t", "Time is 09:30:25.93" ] },
		"$v": { "value": [ "DOS version number", "$v", "IBM Personal Computer DOS Version   3.20" ] },
